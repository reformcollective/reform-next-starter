{
	"extends": "@total-typescript/tsconfig/bundler/dom",
	"compilerOptions": {
		"lib": ["ES2024", "DOM", "DOM.Iterable"],
		"jsx": "preserve",
		"incremental": true,
		"plugins": [{ "name": "next" }],
		"baseUrl": ".",
		"paths": {
			"*": ["./app/*"],
			"@/*": ["./*"],
			"sanity/*": ["./sanity/*"],
			"page": ["./app/[[...slug]]/page"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules", "next-env.d.ts"]
}
