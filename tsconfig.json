{
	"extends": "@total-typescript/tsconfig/bundler/dom",
	"compilerOptions": {
		"jsx": "preserve",
		"incremental": true,
		"plugins": [{ "name": "next" }],
		"baseUrl": "./app",
		"paths": {
			"@/*": ["../*"],
			"sanity/*": ["../sanity/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules", "next-env.d.ts"]
}
