{
	"extends": "@total-typescript/tsconfig/bundler/dom",
	"compilerOptions": {
		"jsx": "preserve",
		"incremental": true,
		"plugins": [{ "name": "next" }],
		"baseUrl": "./app",
		"paths": {
			"@/*": ["../*"],
			"library/*": ["./library/*"],
			"components/*": ["./components/*"],
			"styles/*": ["./styles/*"],
			"types/*": ["./types/*"],
			"utils/*": ["./utils/*"],
			"sanity/*": ["../sanity/*"],
			"blog/*": ["./(blog)/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
