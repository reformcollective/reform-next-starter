{
	"recommendations": [
		// language support
		"styled-components.vscode-styled-components",
		"redhat.vscode-xml",

		// formatters, linters
		"biomejs.biome",
		"stylelint.vscode-stylelint",
		"esbenp.prettier-vscode",

		// typescript helpers
		"mylesmurphy.prettify-ts",
		"yoavbls.pretty-ts-errors",

		// other utitlities
		"naumovs.color-highlight", // highlight colors in the editor
		"kisstkondoros.csstriggers", // shows data from https://css-triggers.com/
		"eamodio.gitlens", // show inline git information, e.g. the blame for a line
		"wix.vscode-import-cost", // show the weight of importing a module
		"quicktype.quicktype", // generate typescript types from json
		"meganrogge.template-string-converter", // converts strings to template strings when you type '${'
		"unpacksoftware.run-it", // restarts typescript after running sanity typegen
		"actboy168.tasks" // adds a button to the status bar to run sanity typegen
	],
	"unwantedRecommendations": [
		// built into VS Code
		"formulahendry.auto-rename-tag",
		// built into VS Code
		"formulahendry.auto-complete-tag"
	]
}
