{
	"private": true,
	"author": "Reform Collective",
	"name": "website",
	"type": "module",
	"scripts": {
		"dev": "wireit",
		"build": "wireit",
		"start": "wireit",
		"test": "wireit",
		"lint": "wireit",
		"format": "wireit",
		"typegen": "wireit",
		"typecheck": "wireit",
		"generate-manifest": "wireit",
		"prepare": "lefthook install",
		"pnpm:devPreinstall": "pnpm -s check-env & pnpm -s init-submodule & pnpm -s git-config & wait",
		"check-env": "if [ -n \"$CI\" ]; then exit 0; else node --env-file=.env app/env.ts || (pnpm dlx cowsay 'You are missing a .env file' && exit 1); fi",
		"git-config": "git config submodule.recurse true",
		"init-submodule": "git diff --exit-code --quiet && git submodule update --init || exit 0"
	},
	"wireit": {
		"dev": {
			"command": "next dev",
			"dependencies": [
				"typegen"
			],
			"service": true
		},
		"start": {
			"command": "next start",
			"dependencies": [
				"build"
			],
			"service": true
		},
		"build": {
			"command": "pnpm -s typecheck & pnpm -s generate-manifest & next build & wait",
			"env": {
				"WIREIT_LOGGER": "quiet"
			}
		},
		"typecheck": {
			"command": "tsgo",
			"dependencies": [
				"typegen"
			]
		},
		"generate-manifest": {
			"command": "mkdir -p public/studio && sanity manifest extract --path public/studio/static",
			"files": [
				"sanity/**/*",
				"sanity.config.ts"
			],
			"output": [
				"public/studio/static/**/*"
			]
		},
		"sanity-typegen": {
			"command": "sanity schema extract && sanity typegen generate --verbose",
			"files": [
				"sanity/**/*",
				"sanity.config.ts",
				"app/**/*.ts",
				"app/**/*.tsx"
			],
			"output": [
				"schema.json",
				"sanity.types.ts"
			]
		},
		"next-typegen": {
			"command": "next typegen",
			"files": [
				"app/**/*.ts",
				"app/**/*.tsx",
				"next.config.ts",
				"tsconfig.json"
			],
			"output": [
				".next/types/**/*.ts"
			]
		},
		"typegen": {
			"dependencies": [
				"next-typegen",
				"sanity-typegen"
			]
		},
		"stylelint": {
			"command": "stylelint . --fix"
		},
		"oxlint": {
			"command": "oxlint --fix --type-aware --type-check",
			"dependencies": [
				"typegen"
			]
		},
		"lint": {
			"dependencies": [
				"./library:lint",
				"stylelint",
				"oxlint"
			]
		},
		"oxfmt": {
			"command": "oxfmt"
		},
		"format": {
			"dependencies": [
				"./library:format",
				"oxfmt"
			]
		},
		"test": {
			"dependencies": [
				"./library:test"
			]
		}
	},
	"dependencies": {
		"@base-ui/react": "1.0.0",
		"@capsizecss/core": "4.1.3",
		"@sanity/assist": "5.0.2",
		"@sanity/client": "7.13.2",
		"@sanity/code-input": "6.0.3",
		"@sanity/icons": "3.7.4",
		"@sanity/image-url": "2.0.2",
		"@sanity/vision": "4.21.1",
		"@svgr/webpack": "8.1.0",
		"@t3-oss/env-nextjs": "0.13.8",
		"@total-typescript/ts-reset": "0.6.1",
		"@total-typescript/tsconfig": "1.0.4",
		"@types/node": "25.0.1",
		"@types/react": "19.2.7",
		"@types/react-dom": "19.2.3",
		"@typescript/native-preview": "7.0.0-dev.20251211.1",
		"@userback/widget": "0.3.12",
		"@vanilla-extract/css": "1.17.5",
		"@vanilla-extract/dynamic": "2.1.5",
		"ahooks": "3.9.6",
		"babel-plugin-react-compiler": "19.1.0-rc.3",
		"gsap": "3.14.1",
		"jsdom": "27.3.0",
		"lefthook": "2.0.9",
		"lenis": "1.3.16",
		"next": "16.1.0-canary.19",
		"next-sanity": "11.6.10",
		"nuqs": "2.8.5",
		"oxfmt": "0.17.0",
		"oxlint": "1.32.0",
		"oxlint-tsgolint": "0.8.6",
		"prettier": "3.7.4",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"react-player": "3.4.0",
		"sanity": "4.21.1",
		"sanity-image": "1.0.0",
		"sanity-plugin-asset-source-unsplash": "4.0.1",
		"sanity-plugin-link-field": "1.4.2",
		"sanity-plugin-media": "4.1.0",
		"sanity-plugin-mux-input": "2.12.0",
		"server-only": "0.0.1",
		"styled-components": "6.1.19",
		"stylelint": "16.26.1",
		"stylelint-config-reform-collective": "github:reformcollective/stylelint-config-reform#migration",
		"svgo": "4.0.0",
		"typescript": "5.9.3",
		"unlighthouse": "0.17.4",
		"vite-tsconfig-paths": "5.1.4",
		"wireit": "0.14.12",
		"zod": "4.1.13"
	},
	"packageManager": "pnpm@10.25.0",
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "24.11.1",
			"onFail": "download"
		}
	},
	"pnpm": {
		"overrides": {
			"react": "$react",
			"react-dom": "$react-dom",
			"@types/react": "$@types/react",
			"@types/react-dom": "$@types/react-dom",
			"gsap": "$gsap",
			"@vanilla-extract/compiler": "https://pkg.pr.new/RJWadley/vanilla-extract/@vanilla-extract/compiler@edaedbb",
			"@vanilla-extract/css": "https://pkg.pr.new/RJWadley/vanilla-extract/@vanilla-extract/css@edaedbb",
			"@vanilla-extract/integration": "https://pkg.pr.new/RJWadley/vanilla-extract/@vanilla-extract/integration@edaedbb",
			"@vanilla-extract/next-plugin": "https://pkg.pr.new/RJWadley/vanilla-extract/@vanilla-extract/next-plugin@edaedbb",
			"@vanilla-extract/turbopack-plugin": "https://pkg.pr.new/RJWadley/vanilla-extract/@vanilla-extract/turbopack-plugin@edaedbb",
			"@vanilla-extract/webpack-plugin": "https://pkg.pr.new/RJWadley/vanilla-extract/@vanilla-extract/webpack-plugin@edaedbb"
		},
		"onlyBuiltDependencies": [
			"@parcel/watcher",
			"@swc/core",
			"esbuild",
			"lefthook",
			"puppeteer",
			"sharp",
			"vue-demi"
		]
	},
	"stylelint": {
		"extends": "stylelint-config-reform-collective"
	},
	"devDependencies": {}
}
