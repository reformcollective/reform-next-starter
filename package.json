{
	"private": true,
	"author": "Reform Collective",
	"scripts": {
		"dev": "next dev --turbo",
		"build": "next build --turbo",
		"postbuild": "mkdir -p public/studio && sanity manifest extract --path public/studio/static",
		"analyze": "ANALYZE=true next build",
		"serve": "next start",
		"lint": "biome lint --write && stylelint . --fix && pnpm --recursive lint",
		"format": "prettier --write . && biome check --write && stylelint . --fix && pnpm --recursive format",
		"preinstall": "npx only-allow pnpm",
		"pnpm:devPreinstall": "pnpm run checkEnv && pnpm run submodule",
		"checkEnv": "if [ -n \"$CI\" ]; then exit 0; else ls .env || (pnpm dlx cowsay 'You are missing a .env file' && exit 1); fi",
		"submodule": "git diff --exit-code --quiet && git submodule update --init || exit 0",
		"postinstall": "pnpm run typegen || exit 0",
		"typegen": "sanity schema extract && sanity typegen generate --verbose",
		"prepare": "git lfs install && lefthook install"
	},
	"dependencies": {
		"@ariakit/react": "0.4.19",
		"@biomejs/biome": "2.3.5",
		"@capsizecss/core": "4.1.3",
		"@sanity/assist": "5.0.2",
		"@sanity/client": "7.12.1",
		"@sanity/icons": "3.7.4",
		"@sanity/image-url": "1.2.0",
		"@sanity/mutate": "0.14.0",
		"@sanity/vision": "4.15.0",
		"@svgr/webpack": "8.1.0",
		"@t3-oss/env-nextjs": "0.13.8",
		"@total-typescript/ts-reset": "0.6.1",
		"@total-typescript/tsconfig": "1.0.4",
		"@types/node": "^24.10.1",
		"@types/react": "19.2.4",
		"@types/react-dom": "19.2.3",
		"@userback/widget": "0.3.11",
		"ahooks": "3.9.6",
		"babel-plugin-react-compiler": "19.1.0-rc.3",
		"globby": "15.0.0",
		"gsap": "3.13.0",
		"lefthook": "2.0.3",
		"next": "16.0.2",
		"next-sanity": "11.6.6",
		"nextjs-routes": "2.2.5",
		"nuqs": "2.7.3",
		"prettier": "3.6.2",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"react-player": "3.3.3",
		"sanity": "4.15.0",
		"sanity-image": "1.0.0",
		"sanity-plugin-asset-source-unsplash": "4.0.1",
		"sanity-plugin-link-field": "file:app/library/patches/sanity-plugin-link-field-1.4.0.tgz",
		"sanity-plugin-media": "4.0.0",
		"sanity-plugin-mux-input": "2.11.1",
		"server-only": "0.0.1",
		"styled-components": "6.1.19",
		"stylelint": "16.25.0",
		"stylelint-config-reform-collective": "github:reformcollective/stylelint-config-reform#migration",
		"svgo": "4.0.0",
		"typescript": "5.9.3",
		"unlighthouse": "0.17.4",
		"zod": "4.1.12"
	},
	"stylelint": {
		"extends": "stylelint-config-reform-collective"
	},
	"browserslist": [
		"last 99 chrome versions and last 1 year",
		"last 99 ChromeAndroid versions and last 1 year",
		"last 99 Safari versions and last 1 year",
		"last 99 iOS versions and last 1 year",
		"last 99 firefox versions and last 1 year",
		"last 99 FirefoxAndroid versions and last 1 year"
	],
	"packageManager": "pnpm@10.22.0",
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "^24.11.1",
			"onFail": "download"
		},
		"packageManager": {
			"name": "pnpm",
			"version": "10.22.0",
			"onFail": "download"
		}
	},
	"lint-staged": {
		"*": [
			"stylelint --fix",
			"prettier --write --ignore-unknown",
			"biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	},
	"pnpm": {
		"overrides": {
			"react": "$react",
			"react-dom": "$react-dom",
			"@types/react": "$@types/react",
			"@types/react-dom": "$@types/react-dom",
			"gsap": "$gsap"
		},
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"@parcel/watcher",
			"@tailwindcss/oxide",
			"@vercel/speed-insights",
			"esbuild",
			"lefthook",
			"puppeteer",
			"sharp",
			"vue-demi"
		]
	},
	"devDependencies": {}
}
