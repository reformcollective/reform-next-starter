{
	"name": "website",
	"private": true,
	"author": "Reform Collective",
	"type": "module",
	"scripts": {
		"dev": "wireit",
		"build": "wireit",
		"serve": "wireit",
		"test": "wireit",
		"lint": "wireit",
		"format": "wireit",
		"typegen": "wireit",
		"typecheck": "wireit",
		"generate-manifest": "wireit",
		"pnpm:devPreinstall": "pnpm init-submodule && pnpm git-config",
		"postinstall": "pnpm check-env",
		"prepare": "lefthook install",
		"check-env": "if [ -n \"$CI\" ]; then exit 0; else node --env-file=.env app/env.ts || (pnpm dlx cowsay 'You are missing a .env file' && exit 1); fi",
		"git-config": "git config submodule.recurse true",
		"init-submodule": "git diff --exit-code --quiet && git submodule update --init || exit 0"
	},
	"dependencies": {
		"@base-ui/react": "^1.1.0",
		"@capsizecss/core": "^4.1.3",
		"@sanity/assist": "^5.0.4",
		"@sanity/client": "^7.14.1",
		"@sanity/code-input": "^7.0.6",
		"@sanity/icons": "^3.7.4",
		"@sanity/image-url": "^2.0.3",
		"@sanity/vision": "^5.6.0",
		"@svgr/webpack": "^8.1.0",
		"@t3-oss/env-nextjs": "^0.13.10",
		"@total-typescript/ts-reset": "^0.6.1",
		"@total-typescript/tsconfig": "^1.0.4",
		"@types/node": "^25.0.10",
		"@types/react": "^19.2.9",
		"@types/react-dom": "^19.2.3",
		"@typescript/native-preview": "7.0.0-dev.20260106.1",
		"@userback/widget": "^0.3.12",
		"@vanilla-extract/css": "https://pkg.pr.new/RJWadley/vanilla-extract/@vanilla-extract/css@edaedbb",
		"@vanilla-extract/dynamic": "^2.1.5",
		"ahooks": "^3.9.6",
		"babel-plugin-react-compiler": "^1.0.0",
		"gsap": "^3.14.2",
		"lefthook": "^2.0.15",
		"lenis": "^1.3.17",
		"next": "16.1.5",
		"next-sanity": "^12.0.14",
		"nuqs": "^2.8.6",
		"oxfmt": "^0.27.0",
		"oxlint": "^1.42.0",
		"oxlint-tsgolint": "^0.11.2",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"react-player": "^3.4.0",
		"sanity": "^5.6.0",
		"sanity-plugin-asset-source-unsplash": "^7.0.2",
		"sanity-plugin-link-field": "^1.4.2",
		"sanity-plugin-media": "^4.1.1",
		"sanity-plugin-mux-input": "^2.13.0",
		"server-only": "^0.0.1",
		"stylelint": "^17.0.0",
		"stylelint-config-reform-collective": "github:reformcollective/stylelint-config-reform#migration",
		"svgo": "^4.0.0",
		"typescript": "^5.9.3",
		"unlighthouse": "^0.17.4",
		"vite-tsconfig-paths": "^6.0.5",
		"wireit": "^0.14.12",
		"zod": "^4.3.6"
	},
	"devDependencies": {},
	"stylelint": {
		"extends": "stylelint-config-reform-collective"
	},
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "^24.13.0",
			"onFail": "download"
		}
	},
	"packageManager": "pnpm@10.28.2",
	"pnpm": {
		"overrides": {
			"react": "$react",
			"react-dom": "$react-dom",
			"@types/react": "$@types/react",
			"@types/react-dom": "$@types/react-dom",
			"gsap": "$gsap",
			"@vanilla-extract/compiler": "https://pkg.pr.new/RJWadley/vanilla-extract/@vanilla-extract/compiler@edaedbb",
			"@vanilla-extract/css": "https://pkg.pr.new/RJWadley/vanilla-extract/@vanilla-extract/css@edaedbb",
			"@vanilla-extract/integration": "https://pkg.pr.new/RJWadley/vanilla-extract/@vanilla-extract/integration@edaedbb",
			"@vanilla-extract/next-plugin": "https://pkg.pr.new/RJWadley/vanilla-extract/@vanilla-extract/next-plugin@edaedbb",
			"@vanilla-extract/turbopack-plugin": "https://pkg.pr.new/RJWadley/vanilla-extract/@vanilla-extract/turbopack-plugin@edaedbb",
			"@vanilla-extract/webpack-plugin": "https://pkg.pr.new/RJWadley/vanilla-extract/@vanilla-extract/webpack-plugin@edaedbb"
		},
		"onlyBuiltDependencies": [
			"@parcel/watcher",
			"@swc/core",
			"esbuild",
			"lefthook",
			"puppeteer",
			"sharp",
			"vue-demi"
		]
	},
	"wireit": {
		"dev": {
			"command": "next dev",
			"dependencies": [
				"typegen"
			],
			"service": true
		},
		"serve": {
			"command": "next start",
			"dependencies": [
				"build"
			],
			"service": true
		},
		"build-next": {
			"command": "next build"
		},
		"build": {
			"dependencies": [
				"build-next",
				"typecheck",
				"generate-manifest"
			]
		},
		"typecheck": {
			"command": "tsgo",
			"dependencies": [
				"typegen"
			]
		},
		"generate-manifest": {
			"command": "mkdir -p public/studio && sanity manifest extract --path public/studio/static",
			"files": [
				"sanity/**/*",
				"sanity.config.ts"
			],
			"output": [
				"public/studio/static/**/*"
			]
		},
		"sanity-typegen": {
			"command": "sanity schema extract && sanity typegen generate --verbose",
			"files": [
				"sanity/**/*",
				"sanity.config.ts",
				"app/**/*.ts",
				"app/**/*.tsx"
			],
			"output": [
				"schema.json",
				"sanity.types.ts"
			]
		},
		"next-typegen": {
			"command": "next typegen",
			"files": [
				"app/**/*.ts",
				"app/**/*.tsx",
				"next.config.ts",
				"tsconfig.json"
			],
			"output": [
				".next/types/**/*.ts"
			]
		},
		"typegen": {
			"dependencies": [
				"next-typegen",
				"sanity-typegen"
			]
		},
		"stylelint": {
			"command": "stylelint . --fix"
		},
		"oxlint": {
			"command": "oxlint --fix --type-aware --type-check",
			"dependencies": [
				"typegen"
			]
		},
		"lint": {
			"dependencies": [
				"./library:lint",
				"stylelint",
				"oxlint"
			]
		},
		"oxfmt": {
			"command": "oxfmt"
		},
		"format": {
			"dependencies": [
				"./library:format",
				"oxfmt"
			]
		},
		"test": {
			"dependencies": [
				"./library:test"
			]
		}
	}
}
